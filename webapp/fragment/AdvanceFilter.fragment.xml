<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.ui.layout.form"
	xmlns:custom="oneapp.incture.workbox.controlExtension">
	
	<Dialog class="sapUiSizeCompact List_Filter" contentWidth="38.4rem" showHeader="false" afterClose="afterCloseAdvFilter">
		<VBox class="wbAdvSearchMainFragmentPadding sapUiSizeCompact sapUiTinyMargin" busy="{}" busyIndicatorDelay="0">
			<VBox renderType="Bare" class=" sapUiSizeCompact " >
				<HBox justifyContent="End" renderType="Bare" class="wbAdvSearchFragmentPadding"
					>
					<Button text="{i18n>SHOW_ADVANCED_FILTER}" class="wbCustomButtonClass wbTextBoldClass" press="toggleShowAdvancedFilter" visible="false"/>
				</HBox>

            <f:SimpleForm id="ID_BASIC_FILTER_CONTAINER" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12"
				adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2"
				singleContainerFullSize="false">
                </f:SimpleForm>
            </VBox>
			<VBox renderType="Bare" class=" sapUiSizeCompact " >
				<HBox justifyContent="End" class="wbAdvSearchFragmentPadding">
					<Button text="{i18n>SHOW_BASIC_FILTER}" class="wbCustomButtonClass wbTextBoldClass" press="toggleShowAdvancedFilter"/>
				</HBox>
				<VBox id="ID_ADV_FILTER_CONTAINER" renderType="Bare" class="wbAdvFilterScrollCont wbOverflowVertical"></VBox>
			</VBox>
			<VBox renderType="Bare" class="sapUiSizeCompact wbAdvSearchFragmentFooterVBox">
				<ObjectStatus text="{}"
					icon=""
					state=""/>
				<Button text="{i18n>ADD_ROW_TEXT}" type="Transparent" press="addRowSearchFilter"
	
					class="wbTransparentButtonStyleClass wbAdvSearchFragmentAddRowButton" />
				<HBox renderType="Bare" justifyContent="SpaceBetween">
					
					<HBox renderType="Bare" justifyContent="End" width="100%">
						<Button text="{i18n>CLEAR_TEXT}" type="Transparent" press="clearFilterFn" class="wbTransparentButtonStyleClass sapUiTinyMarginEnd"/>
                        <Button text="{i18n>CLOSE_TEXT}" type="Transparent" press="closeAdvanceFilters" class="wbTransparentButtonStyleClass sapUiTinyMarginEnd"/>
						
						<Button text="{i18n>APPLY_TEXT}"
							type="Emphasized" press="applyFilter" class="wbEmphasizedButtonStyleClass sapUiTinyMarginBegin"/>
						
						<Button text="{i18n>SAVE_TEXT}"
							type="Emphasized" press="openSaveFilter" class="wbEmphasizedButtonStyleClass ">
							
						</Button>
					</HBox>
				</HBox>
			</VBox>
		</VBox>
	</Dialog>
	
</core:FragmentDefinition>